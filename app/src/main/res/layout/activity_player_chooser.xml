<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/listPlayerChooser"
        android:name="com.example.boardmania.PlayerChooser.PlayerChooserActivity"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".PlayerChooser.PlayerChooserActivity"
        tools:listitem="@layout/rowview"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Start"
        android:background="#7f0000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:onClick="start"
        android:enabled="false"/>
</LinearLayout>